<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/agreeBtn"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        >
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:id="@+id/scrollView">

       <TextView
            android:layout_width="wrap_content"
             android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="Why a Fair Usage Policy?
While thhe freedom of unlimited uploads on their packages as No Fair Usage Policy has been applied on Uploads.
"
            android:id="@+id/textView2" />

    </ScrollView>
</TableLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/agreement2"
        android:layout_margin="10dp"

        android:textColor="@color/white"
        android:background="@drawable/rounded_rectangle_blue"
        android:layout_centerHorizontal="true"
        android:id="@+id/agreeBtn"
        android:layout_gravity="center_horizontal" />


</RelativeLayout>