<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
android:clickable="true"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"

        android:layout_height="wrap_content"
        android:text="Identity Verification"
        android:textAlignment="center"
android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/darkblue" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fnameLo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <EditText
            android:id="@+id/identity_fnameET"
            android:layout_width="match_parent"
            android:inputType="textCapWords"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_height="wrap_content"
            android:hint="First Name" />
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/MnameLo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <EditText
            android:id="@+id/identity_MnameET"
            android:layout_width="match_parent"
            android:inputType="textCapWords"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_height="wrap_content"
            android:hint="Middle name" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/lastnameLo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <EditText
            android:id="@+id/identity_lastnameET"
            android:layout_width="match_parent"
            android:inputType="textCapWords"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_height="wrap_content"
            android:hint="Last name (Surname)" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/frnameLo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <EditText
            android:id="@+id/identity_fathernameET"
            android:layout_width="match_parent"
            android:inputType="textCapWords"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Candidates Father Name" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="5">


        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="Date of Birth"
            android:textAppearance="?android:attr/textAppearanceMedium"
           />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dobLO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <EditText
                android:id="@+id/identity_dobET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:hint="Select date"


                android:textColor="@color/synopsis_blue" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gender"
            android:textAppearance="?android:attr/textAppearanceMedium"
 />

        <RadioGroup
            android:id="@+id/identity_genderRG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2"> <!-- Error on this line -->
            <RadioButton
                android:id="@+id/rdb_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_weight="1"
                android:text="Female" />

            <RadioButton
                android:id="@+id/rdb_male"

                android:layout_width="0dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male" />
        </RadioGroup>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/emailLO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <EditText
            android:id="@+id/identity_emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_gravity="center_horizontal"
            android:hint="Registered Email ID" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="14">

        <android.support.design.widget.TextInputLayout

            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/country_code_id_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:hint="@string/country_code"
                android:text="@string/default_countrycode"
                android:inputType="phone"
                android:maxLength="4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@drawable/text_colors"

                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/identity_mobileET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:maxLength="10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@drawable/text_colors" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="14">

        <android.support.design.widget.TextInputLayout

            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/alterate_country_code_id_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:hint="@string/country_code"
                android:text="@string/default_countrycode"
                android:inputType="phone"
                android:maxLength="4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@drawable/text_colors"

                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/identity_alternate_phoneET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:hint="@string/alternate_mobile"
                android:inputType="phone"
                android:maxLength="10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@drawable/text_colors" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/identityVerificationBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/gradient_blue"

        android:text="SAVE"
        android:textColor="@color/white" />
</LinearLayout>

        </ScrollView>
    </LinearLayout>
