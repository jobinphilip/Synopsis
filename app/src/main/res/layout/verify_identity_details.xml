<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<include
  layout="@layout/logo_and_tagline"  ></include>
    <TextView
        android:layout_width="match_parent"
        android:text="Identity Verification"
        android:textColor="@color/darkblue"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

        android:textAlignment="center"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:hint="First name,Middle name (Full Name)"
        android:layout_height="wrap_content"
        android:id="@+id/editText2" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Last name (Surname)"
        android:layout_height="wrap_content"
        android:id="@+id/editText3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:hint="Candidates Father Name"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:inputType="date"
        android:hint="Date of Birth(Date/Month/Year)"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Gender(male/female)"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Registered Email ID"
        android:id="@+id/editText7"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Mobile Phone Number"
        android:ems="10"
        android:id="@+id/editText8" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Alternate Phone Number (optional)"
        android:ems="10"
        android:id="@+id/editText9"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/white"
        android:background="@drawable/gradient_blue"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal" />
</LinearLayout>