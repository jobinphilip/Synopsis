<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:text="@string/register"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"

        android:textSize="@dimen/Header_size"
        android:id="@+id/headerTV"
    android:layout_below="@+id/header"
        android:textColor="@color/synopsis_blue"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/headerTV"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/mobile_Tv"
            android:text="@string/mobile_number"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

            android:textColor="@color/synopsis_blue"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_below="@+id/mobile_Tv"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/mobile_Et"
            android:textColor="@color/synopsis_blue"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/email_Tv"
        android:text="@string/email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
       android:layout_below="@+id/mobile_Et"
        android:textColor="@color/synopsis_blue"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_below="@+id/email_Tv"
        android:id="@+id/email_Et"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/synopsis_blue"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/confirm_email_Tv"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/confirm_email"
            android:layout_below="@+id/email_Et"
            android:textColor="@color/synopsis_blue"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_below="@+id/confirm_email_Tv"
            android:id="@+id/confirm_email_Et"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/synopsis_blue"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/passwordTv"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/password"
        android:layout_below="@+id/confirm_email_Et"
        android:textColor="@color/synopsis_blue"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/passwordTv"
        android:id="@+id/passwordET"
        android:inputType="textPassword"
        android:drawableRight="@drawable/show_password"
        android:textColor="@color/synopsis_blue"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referal ID:"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/synopsis_blue"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/refeeanceidTV"
            android:layout_below="@id/passwordET"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"

            android:layout_below="@+id/passwordET"
            android:layout_toRightOf="@+id/refeeanceidTV"
            android:layout_toEndOf="@+id/refeeanceidTV" />


    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_blue"
        android:text="Register for free"
        android:textColor="@color/white"
        android:onClick="termsfn"
        android:layout_alignParentBottom="true"
        android:id="@+id/button"
  android:layout_margin="10dp"
        android:layout_centerHorizontal="true" />



</RelativeLayout>