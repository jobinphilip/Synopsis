<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Verify User"
        android:id="@+id/textView23" />

    <TextView
        android:layout_width="match_parent"

        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Education"
        android:id="@+id/textView24" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Institution: "
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/institution_nameTv" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/institution_nameTv"

        android:layout_toRightOf="@+id/institution_nameTv"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView26" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="University: "
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/universitytv" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/universitytv"

            android:layout_toRightOf="@+id/universitytv"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/uiversityET" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"

        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Employment"
        android:id="@+id/employmentheader" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Employer "
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/employer1header" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employer1header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="employer/consultancy name"
            android:id="@+id/current_employerET" />

        <EditText
            android:layout_width="match_parent"
            android:hint="Last held Position"
            android:layout_below="@+id/current_employerET"
            android:layout_height="wrap_content"
            android:id="@+id/employer1_position" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Previous Employer "
            android:layout_centerVertical="true"
            android:layout_below="@+id/employer1_position"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/employer2header" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employer2header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="employer/consultancy name"
            android:id="@+id/prev_employerET" />

        <EditText
            android:layout_width="match_parent"
            android:hint="Last held Position"
            android:layout_below="@+id/prev_employerET"
            android:layout_height="wrap_content"
            android:id="@+id/employer2_position" />
    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_rectangle_blue"
        android:text="Submit"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal" />


</LinearLayout>