<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
android:clickable="true"
    android:background="@color/white"
    android:layout_height="match_parent">

<TextView
    android:layout_width="match_parent"
    android:text="contact us"
    android:padding="20dp"
    android:textColor="@color/synopsis_blue"
    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
    android:gravity="center"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/email_us_layout"
        android:clickable="true"
        android:background="@color/light_blue"
        android:orientation="vertical"

        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="Email us"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="info@synopsissolutions.com"
            android:textColor="@color/white"
            android:drawableRight="@drawable/at"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/callus_layout"
        android:clickable="true"
        android:layout_marginTop="2dp"
        android:background="@color/light_blue"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Call us"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="+91-888-555-6321"
            android:textColor="@color/white"
            android:drawableRight="@drawable/contact_us"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:clickable="true"
        android:id="@+id/visit_website_layout"
        android:layout_marginTop="2dp"
        android:background="@color/light_blue"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Visit  us"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="www.synopsissolutions.com"
            android:textColor="@color/white"
            android:drawableRight="@drawable/website_drawable"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>